<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/colorWhiteBackground"
    android:elevation="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/exitBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_exit" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/title"
            style="@style/MediumBoldGrayDarkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/zone_dialog" />

        <EditText
            android:id="@+id/zoneName"
            style="@style/MediumGrayLightText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="@string/zone_name" />

        <Button
            android:id="@+id/okBtn"
            style="@style/MediumGreenButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/zoneName"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="ตกลง" />
    </LinearLayout>
</RelativeLayout>
